<div class="container mt-4">
  <h3>Sửa Khóa Học</h3>
  <form
    class="mt-4"
    method="post"
    action="/admin/products/{{product._id}}?_method=put"
  >
    <div class="form-group">
      <label for="name">Tên sảnn phẩm </label>
      <input
        type="text"
        class="form-control"
        value="{{product.name}}"
        id="name"
        name="name"
        placeholder="Enter name"
      />
    </div>
    <div class="form-group">
      <label for="image">Hình ảnh sản phẩm</label>
      <input
        type="text"
        class="form-control"
        value="{{product.image}}"
        id="image"
        name="image"
        placeholder="Enter image"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả sản phẩm</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        placeholder="Enter description"
      >{{product.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      <input
        type="text"
        class="form-control"
        value="{{product.price}}"
        id="price"
        name="price"
        placeholder="Enter price"
      />
    </div>

    <button type="submit" class="btn btn-primary">Lưu Lại sản phẩm</button>
    <button type="reset" class="btn btn-primary">Reset sản phẩm</button>
  </form>
</div>