<div class="container">
  <div class="mt-4">
    <div class="row mb-5">
      {{#each products}}
        <div
          class="col-lg-3 mb-3 pagination pagination-circle justify-content-center"
        >
          <div class="card">
            <div class="card-image">
              <a
                href="admin/products/{{this.slug}}"
                class="d-block rounded-lg lift lift-lg"
              >
                <img
                  class="card-img-top img-fluid rounded-lg"
                  src="{{this.image}}"
                  alt="{{this.image}}"
                />
              </a>
            </div>
            <div class="card-body card lift h-100">
              <a href="admin/products/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
              </a>
              <p class="card-text text-truncate">{{this.description}}</p>
              <p class="card-text text-truncate">{{this.price}}</p>
            </div>
            <div class="card-footer">
              <a href="#" class="btn btn-primary">Mua sản phẩm</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  </div>
  <div class="container">
    <div class="category">
      <ul class="list-category">
        {{#each categories}}
          <a href=""><li>{{this.nameCategory}}</li></a>
        {{/each}}
      </ul>
    </div>
  </div>
</div>