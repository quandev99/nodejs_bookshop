<div class="container">
  <div class="mt-4">
    <div class="row">
      {{#each products}}
        <div class="col-lg-4 mb-3 text-center">
          <div class="card">
            <div class="card-image">
              <a
                href="admin/products/{{this.slug}}"
                {{! class="d-block rounded-lg lift lift-lg" }}
              >
                <img
                  class="card-img-top img-fluid rounded-lg"
                  src="{{this.image}}"
                  alt="{{this.image}}"
                />
              </a>
            </div>
            <div class="card-body">
              <a href="admin/products/{{this.slug}}">
                <h5 class="card-title">{{this.name}}</h5>
              </a>
              <p class="card-text text-truncate">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Mua sản phẩm</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>